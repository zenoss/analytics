# TODO:  Fix false negatives when workers restart normally
ps -ww -u zenoss -o etime,args | egrep "^ *([0-9]+-)?[0-9]{2}:[0-9]{2}.*zenjobs worker" | [ $(wc -l) -gt 1 -a $(egrep -c " 00:00:0[0-5] ") -eq 0 ]
