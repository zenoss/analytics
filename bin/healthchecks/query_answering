# check if central_query is accessible
#
is_ready()
{
    status_url=$1
    timeout 3 curl -A 'Query_answering is_ready' -w %{http_code} -s -XHEAD ${status_url}
}

http_code=$(is_ready http://localhost:8080/ping/status/performance)

if [ "$http_code" != "200" ] 
then
    exit 1
fi

exit 0
